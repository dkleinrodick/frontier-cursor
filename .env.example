# Server Configuration
PORT=3000
NODE_ENV=production
HOST=localhost

# Decodo Proxy Configuration (Required for proxy mode)
DECODO_USERNAME=your_decodo_username
DECODO_PASSWORD=your_decodo_password
DECODO_MAX_USES_PER_MINUTE=2
DECODO_MAX_WORKERS=3

# Scraper Configuration
SCRAPER_METHOD=playwright
# Options: playwright, decodo, bypass1
# - playwright: Direct scraping (may be blocked)
# - decodo: Use Decodo residential proxies (recommended for production)
# - bypass1: Advanced bypass techniques

SCRAPER_TIMEOUT_SECONDS=90
SCRAPER_MAX_RETRIES=3
SCRAPER_CONCURRENT_ROUTES=5

# Security
API_KEY=your_secret_api_key_here
# Generate: openssl rand -hex 32

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
